<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragments.PendingPaymentsFragment"
    android:padding="25dp">

    <TextView
        android:id="@+id/textView_pendingPaymentsFragment_pendingPaymentsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "@string/pagos_pendientes_por_cargar"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/h5_text_size"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/recyclerView_pendingPaymentsFragment_pendingPayments"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerView_pendingPaymentsFragment_pendingPayments"
        app:layout_constraintTop_toBottomOf="@id/textView_pendingPaymentsFragment_pendingPaymentsTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/floating_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:contentDescription="@string/fab_new_operation"
        app:srcCompat="@drawable/ic_baseline_add"/>

</androidx.constraintlayout.widget.ConstraintLayout>