<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.UserProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_accountDetailsFragment_headerCard"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="@dimen/header_card_negativeMarginTop"

        android:backgroundTint="@color/dark_blue"
        app:cardCornerRadius="@dimen/header_card_radius"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/header_card_marginTop">

            <TextView
                android:id="@+id/textView_profileUserFragment_alias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/develop_user_alias"
                android:textColor="@color/white"
                android:textSize="@dimen/h2_text_size"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_profileUser_pictureContainer"
        android:layout_width="@dimen/profile_picture_size"
        android:layout_height="@dimen/profile_picture_size"
        android:layout_marginTop="-115dp"
        app:cardBackgroundColor="@color/light_gray_1"
        app:cardCornerRadius="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardView_accountDetailsFragment_headerCard">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="300dp"
            android:layout_margin="15dp"
>

            <ImageView
                android:id="@+id/imageView_profileUserFragment_picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/profile_pic_1" />

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cardView_profileUser_pictureContainer"
        android:paddingHorizontal="@dimen/horizontal_fragment_padding"
        android:clipToPadding="false"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardView_profileUserFragment_nameContainer"
            app:cardCornerRadius="@dimen/operation_item_borderRadius"
            app:layout_constraintTop_toTopOf="parent"
            app:cardBackgroundColor="@color/light_gray_1"
            android:layout_marginTop="30dp"
            app:cardElevation="@dimen/item_elevation"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="@dimen/operationItem_horizontalPadding"
                android:paddingVertical="@dimen/operationItem_verticalPadding"

                >
                <TextView
                    android:id="@+id/textView_profileUserFragment_nameTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/plain_text_size"
                    android:textStyle="bold"
                    android:text="@string/placeholder_nombre"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"

                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_profileUserFragment_name"
                    android:text="@string/develop_user_name"
                    app:layout_constraintTop_toBottomOf="@id/textView_profileUserFragment_nameTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:scrollHorizontally="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardView_profileUserFragment_lastNameContainer"
            app:cardCornerRadius="@dimen/operation_item_borderRadius"
            app:layout_constraintTop_toBottomOf="@id/cardView_profileUserFragment_nameContainer"
            app:cardBackgroundColor="@color/light_gray_1"
            android:layout_marginTop="@dimen/operation_items_gap"
            app:cardElevation="@dimen/item_elevation"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="@dimen/operationItem_horizontalPadding"
                android:paddingVertical="@dimen/operationItem_verticalPadding"
                >
                <TextView
                    android:id="@+id/textView_profileUserFragment_lastNameTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/plain_text_size"
                    android:textStyle="bold"
                    android:text="@string/placeholder_apellido"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"

                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_profileUserFragment_lastName"
                    android:text="@string/develop_user_lastName"
                    app:layout_constraintTop_toBottomOf="@id/textView_profileUserFragment_lastNameTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:scrollHorizontally="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardView_profileUserFragment_emailContainer"
            app:cardCornerRadius="@dimen/operation_item_borderRadius"
            app:layout_constraintTop_toBottomOf="@id/cardView_profileUserFragment_lastNameContainer"
            app:cardBackgroundColor="@color/light_gray_1"
            android:layout_marginTop="@dimen/operation_items_gap"
            app:cardElevation="@dimen/item_elevation"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="@dimen/operationItem_horizontalPadding"
                android:paddingVertical="@dimen/operationItem_verticalPadding"
                >
                <TextView
                    android:id="@+id/textView_profileUserFragment_emailTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/plain_text_size"
                    android:textStyle="bold"
                    android:text="@string/correo_electronico"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"

                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_profileUserFragment_emailName"
                    android:text="@string/develop_user_email"
                    app:layout_constraintTop_toBottomOf="@id/textView_profileUserFragment_emailTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:scrollHorizontally="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/divider"

            app:layout_constraintTop_toBottomOf="@id/cardView_profileUserFragment_emailContainer"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_profileUserFragment_contactsTitle"
            android:text="@string/contactos"
            android:textSize="@dimen/h5_text_size"
            android:textStyle="bold"
            android:textColor="@color/dark_blue"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerView_profileUserFragment_contacts"
            app:layout_constraintTop_toBottomOf="@id/textView_profileUserFragment_contactsTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:clipToPadding="false"

            />




    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>